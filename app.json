{
  "name": "Telegram Redirector",
  "description": "A simple Flask app that redirects to Telegram using deep-linking.",
  "repository": "https://github.com/manybotts/redirectorapp",
  "keywords": ["python", "flask", "telegram", "redirect", "deep-link"],
  "env": {
    "BOT_USERNAME": {
      "description": "Your Telegram bot's username (without the '@')",
      "required": true,
      "value": "MyAwesomeBot"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  }
}
